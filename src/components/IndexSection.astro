---
interface Props {
	title: string;
	intro: string;
	description?: string;
	class?: string;
}

const { title, description, intro, class: className } = Astro.props;
---

<section class='space-y-4'>
  <div class='flex flex-col items-center text-center justify-center'>
    <span class='px-4 py-1 rounded-xl text-sm bg-black/90 text-white mb-1'>
      {title}
    </span>
    <h3 class='font-extrabold'>{intro}</h3>
    <p>{description}</p>
  </div>
  <div class:list={[className]}>
    <slot />
  </div>
</section>
